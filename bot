    <div id="app">
      <button class="button" onclick="sendCommand('События')">События</button>
      <button class="button" onclick="sendCommand('Анонсы')">Анонсы</button>
      <button class="button" onclick="sendCommand('Объявления')">
        Объявления
      </button>
      <button class="button" onclick="sendCommand('Блог')">Блог</button>
      <button class="button" onclick="sendCommand('О нас')">О нас</button>
    </div>

    <script>
      let tg = window.Telegram.WebApp;

      tg.expand();

      function sendCommand(command) {
        tg.sendData(command);
      }

      tg.onEvent("mainButtonClicked", function () {
        tg.sendData("Main button clicked");
      });
    </script>
